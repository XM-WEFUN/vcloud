<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bootvue.core.mapper.RoleMenuMapper">
    <select id="findMenuIdsByAdminId" resultType="java.lang.Long">
        SELECT rm.menu_id
        FROM `role_menu` rm,
             `role_admin` ra
        WHERE rm.`role_id` = ra.`role_id`
          AND ra.`admin_id` = #{admin_id}
    </select>
</mapper>