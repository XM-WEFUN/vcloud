<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bootvue.core.mapper.MenuMapper">
    <select id="findMenuByMenuId" resultType="com.bootvue.core.entity.Menu">
        select m.*
        from menu m
                where m.id in
        <foreach collection="menus" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
        order by m.sort asc
    </select>
</mapper>